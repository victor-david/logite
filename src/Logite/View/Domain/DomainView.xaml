<UserControl 
    x:Class="Restless.Logite.View.Domain.DomainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tk="http://schemas.restless.toolkit.com/2021"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vw="clr-namespace:Restless.Logite.View.Domain"
    xmlns:db="clr-namespace:Restless.Logite.Database.Tables;assembly=Logite.Database"
    xmlns:vm="clr-namespace:Restless.Logite.ViewModel.Domain" d:DataContext="{d:DesignInstance Type=vm:DomainViewModel}"
    mc:Ignorable="d"
    d:DesignWidth="860" d:DesignHeight="400">
    <Grid tk:Property.RowHeights="Auto,*" Style="{StaticResource DataEntryPanelStyle}">

        <vw:MainToolBar/>

        <!-- Display mode overview -->
        <vw:ModeOverview
            Grid.Row="1"
            tk:Property.IsLongVisible="{Binding Domain.DisplayMode}" 
            tk:Property.IsLongVisibleValue="{x:Static db:DomainTable+Defs+Values+DisplayMode.Overview}"/>

        <!-- Display mode raw -->
        <vw:ModeRaw
            Grid.Row="1"
            tk:Property.ColumnWidths="*,*,*" tk:Property.RowHeights="*,2*"
            tk:Property.IsLongVisible="{Binding Domain.DisplayMode}" 
            tk:Property.IsLongVisibleValue="{x:Static db:DomainTable+Defs+Values+DisplayMode.Raw}"/>
        
        <!-- Display mode chart -->
        <vw:ModeChart
            Grid.Row="1"
            tk:Property.IsLongVisible="{Binding Domain.DisplayMode}" 
            tk:Property.IsLongVisibleValue="{x:Static db:DomainTable+Defs+Values+DisplayMode.Chart}"/>

    </Grid>

</UserControl>