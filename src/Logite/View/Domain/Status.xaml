<UserControl 
    x:Class="Restless.Logite.View.Domain.Status"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:tk="http://schemas.restless.toolkit.com/2021"
    xmlns:vm="clr-namespace:Restless.Logite.ViewModel.Domain" d:DataContext="{d:DesignInstance Type=vm:DomainViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Status"/>
        <DataGrid
            DockPanel.Dock="Top"
            Style="{StaticResource DataGridCompactStyle}"
            ItemsSource="{Binding Status.ListView}"
            SelectedItem="{Binding Status.SelectedItem}"
            tk:DataGridColumns.Columns="{Binding Status.Columns}"/>        
    </DockPanel>
</UserControl>
